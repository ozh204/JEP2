<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns:web="http://java.sun.com/xml/ns/javaee"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <display-name>JEP2</display-name>

  <security-constraint>
    <display-name>Security settings</display-name>
    <web-resource-collection>
      <web-resource-name>Admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern>
      <url-pattern>/api/waffle/create</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>Available groups</description>
      <role-name>ADMIN</role-name>
    </auth-constraint>
  </security-constraint>

  <security-constraint>
    <display-name>Security settings</display-name>
    <web-resource-collection>
      <web-resource-name>Manager</web-resource-name>
      <url-pattern>/api/order/edit/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>Available groups</description>
      <role-name>ADMIN</role-name>
      <role-name>MANAGER</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>myDBRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/loginError.jsp</form-error-page>
    </form-login-config>
  </login-config>

  <security-role>
    <role-name>ADMIN</role-name>
  </security-role>

  <security-role>
    <role-name>MANAGER</role-name>
  </security-role>

  <error-page>
    <error-code>403</error-code>
    <location>/forbidden.jsp</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/notFound.jsp</location>
  </error-page>

</web-app>
